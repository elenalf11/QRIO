---
import Layout from '../layouts/Layout.astro';
---
<Layout>
<!DOCTYPE html>
<body class="flex flex-col items-center bg-white">
    <!-- Contenedor de la imagen de perfil grande -->
    <div class="mt-5 mb-6">
        <img id="profileImage" src="/avatares/perfil.png" alt="Avatar" 
             class="mx-auto w-32 md:w-56 h-32 md:h-56">
    </div>

    <!-- Contenedor de las imágenes pequeñas -->
    <div class="flex justify-center gap-4 md:gap-20 mt-6 md:mt-16 mb-7">
        <img src="/avatares/avatar1.png" class="w-16 md:w-28 h-20 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
        <img src="/avatares/avatar2.png" class="w-16 md:w-28 h-20 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
        <img src="/avatares/avatar3.png" class="w-16 md:w-28 h-20 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
        <img src="/avatares/avatar4.png" class="w-16 md:w-28 h-20 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
    </div>
    <div class="flex justify-center gap-4 md:gap-20 md:mt-10">
        <img src="/avatares/avatar5.png" class="w-16 md:w-28 h-1206 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
        <img src="/avatares/avatar6.png" class="w-16 md:w-28 h-20 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
        <img src="/avatares/avatar7.png" class="w-16 md:w-28 h-20 md:h-28 transform transition cursor-pointer avatar-option hover:scale-110" onclick="changeAvatar(this)">
    </div>
    
<div class="flex justify-center items-center mt-16 md:mt-20 mb-5 md:mb-3">
    <p class="font-fuente text-3xl md:text-7xl"><b>Perfil</b></p>
</div>
<section class="bg-color2 hover:scale-105 hover:shadow-[0_10px_25px_rgba(0,0,0,0.35)] md:mx-64 mr-7 ml-7 rounded-2xl duration-300 ease-in">
    <div class="md:m-20 mb-10 ml-14 py-7">
        <div class="mb-5">
            <label for="nombre" class="block mb-2 font-fuente text-2xl md:text-3xl">Nombre</label>
            <input type="text" id="nombre" class="focus:border-[#EB585B] px-4 py-2 border rounded-lg focus:ring-2 focus:ring-[#EB585B]/50 w-48 h-10 focus:outline-none">
        </div>
        <div class="mb-5">
            <label for="email" class="block mb-2 font-fuente text-2xl md:text-3xl">Email</label>
            <input type="text" id="email" class="focus:border-[#EB585B] px-4 py-2 border rounded-lg focus:ring-2 focus:ring-[#EB585B]/50 w-48 h-10 focus:outline-none">
        </div>
        <div>
            <label for="password" class="block mb-2 font-fuente text-2xl md:text-3xl">Contraseña</label>
            <input type="password" id="password" class="focus:border-[#EB585B] px-4 py-2 border rounded-lg focus:ring-2 focus:ring-[#EB585B]/50 w-48 h-10 focus:outline-none">
        </div>
        <div class="space-y-3 mt-5">
            <h1 class="font-fuente text-2xl md:text-3xl">Medallas</h1>
            <h2 class="ml-3 font-fuente text-xl md:text-2xl">Bronce      9/14</h2>
            <h2 class="ml-3 font-fuente text-xl md:text-2xl">Plata       4/14</h2>
            <h2 class="ml-3 font-fuente text-xl md:text-2xl">Oro         3/14</h2>
        </div>
        <div>
            <div class="space-y-3 mt-5">
                <h1 class="font-fuente text-2xl md:text-3xl">Cartas obtenidas</h1>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Deporte      9/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Biología       4/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Historia         3/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Gastronomía      9/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Arte       4/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Astronomía       3/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Informática      9/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Ed. Sexual       4/14</h2>
                <h2 class="ml-3 font-fuente text-xl md:text-2xl">Cine       3/14</h2>
            </div>
        </div>
        <div class="md:flex md:justify-center mt-5">
            <a href="/">
                <button class="hover:scale-105 border-2 bg-color4 hover:shadow-[0_10px_25px_rgba(0,0,0,0.35)] border-black rounded-2xl w-52 h-14 font-bold text-lg">
                    <b>Cerrar sesión</b>
                </button>
            </a>
        </div>        
    </div>
</section>
</Layout>
<script>
    // Esperar a que el DOM esté completamente cargado
    document.addEventListener("DOMContentLoaded", function() {
        const profileImage = document.getElementById("profileImage");
        const avatars = document.querySelectorAll(".avatar-option");

        // Verificar si el elemento existe antes de agregar eventos
        if (profileImage) {
            avatars.forEach(avatar => {
                avatar.addEventListener("click", function(this: HTMLImageElement) {
                    console.log("Cambiando avatar a:", this.src); // Depuración
                    profileImage.src = (this as HTMLImageElement).src;

                    // Remover borde azul de todos
                    avatars.forEach(img => img.classList.remove("border-blue-500"));

                    // Agregar borde azul al seleccionado
                    this.classList.add("border-blue-500");
                });
            });
        } else {
            console.error("❌ Error: No se encontró el elemento 'profileImage'.");
        }
    });
</script>

</body>
</html>